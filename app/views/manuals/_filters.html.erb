<table class="filter" align="center">
  <tr>
    <td style="background:#C0FF3E"><i><h5 align="center">Passed (<%= @pass_count %>)
       <%= check_box_tag 'hide pass', false %></h5></i></td>
       <td style="background:#FFC1C1"><i><h5 align="center">Failed ( <%= @failed_count %> )
          <%= check_box_tag 'hide fail', checked = true, :id => "hide-fail" %></h5></i></td>
        <td style="background:#D0D0D0"><i><h5 align="center">Blocked (<%= @blocked_count %> )
           <%= check_box_tag 'hide block', false %></h5></i></td>
           <td style="background:#CCFFFF"><i><h5 align="center">Not Tested ( <%= @untested_count %> )
              <%= check_box_tag 'hide untested', false  %></h5></i></td>
        <td><span id="add-button"><%= link_to image_tag("/images/add.png", :border => 0, :height => 30, :width => 30), new_manual_path %></span></td>
  </tr>
  <tr>
  <td><%= check_box_tag 'hide tags', checked = true, :id => "hide-tags" %>Tags</td>
  <td><%= check_box_tag 'hide jira', checked = true, :id => "hide-jira" %>Jira</td>
</table>