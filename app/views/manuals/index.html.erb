<div class="header-nav" align="right">
  <span id="add" style="display:none">Add New Scenario</span><span id="reset" style="display:none">Retest All Scenarios</span>
  <%= link_to 'Automation Results', results_path %> | <%= link_to 'Metrics', failures_path %> | <%= link_to 'Logout', logout_path %>
</div>
<span id="add-button"><%= link_to image_tag("/images/add.png", :border => 0, :height => 30, :width => 30), new_manual_path %></span>
<span id="reset-button" style="display:none"><%= link_to image_tag("/images/reset_scenarios.png", :border => 0, :height => 30, :width => 30), reset_scenarios_path, :confirm => 'This will reset all your current tests...sure about this?' %></span>

<div id="iteration"><%= @iteration.title %></div>
<div id="search"><% form_tag manuals_path, :method => 'get' do %>
  <p>
  <%= select_tag "search", options_from_collection_for_select(Iteration.all, :id, :title, {:include_blank => 'None'}), :multiple => true %>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end %></div>

    <i><h5 align="center">(<%= number_to_percentage(@fail_count, :precision => 0) %>)</h5></i>
    <div class="manuals" id="fail">
    <table class="manual_steps">
    <tr>
      <th width="5%"></th>
      <th width="15%" align="left">Tag</th>
      <th width="75%" align="left">Scenario</th>
    </tr>
      <% @manuals_fail.each do |manual| %>
        <% if manual.bug.blank? %>
          <tr>
          <td width="5%"></td>
          <td width="15%"><%= link_to(manual.tag.name, tags_path)  %></td>
          <td width="80%"><%= link_to(manual.scenario, edit_manual_path(manual)) %></td>
          </tr>
        <% else %>
          <tr id="bold_text">
          <td align="center" width="5%" class="bug"><%= link_to image_tag('/images/bug.png', :border => 0, :height => 21, :width => 21), edit_manual_path(manual) %></td>
          <td width="15%"><%= link_to(manual.tag.name, tags_path) %></td>
          <td width="80%" bordercolor="#808080"><%= link_to(manual.scenario, edit_manual_path(manual)) %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
  <i><h5 align="center">(<%= number_to_percentage(@pass_count, :precision => 0) %>)</h5></i>
  <div class="manuals" id="pass">
    <table class="manual_steps">
    <tr>
      <th width="5%"></th>
      <th width="15%" align="left">Tag</th>
      <th width="75%" align="left">Scenario</th>
    </tr>  
        <% @manuals_pass.each do |manual| %>
          <% if manual.bug.blank? %>
            <tr>
            <td width="5%"></td>
            <td width="15%"><%= link_to(manual.tag.name, tags_path) %></td>
            <td width="80%"><%= link_to(manual.scenario, edit_manual_path(manual)) %></td>
            </tr>
          <% else %>
            <tr id="bold_text">
              <tr id="bold_text">
              <td align="center" width="5%"><%= image_tag('/images/bug.png', :border => 0, :height => 21, :width => 21) %></td>
              <td width="15%"><%= link_to(manual.tag.name, tags_path) %></td>
              <td width="80%"><%= link_to(manual.scenario, edit_manual_path(manual)) %></td>
            </tr>
          <% end %>
        <% end %>
    </table>
  </div>
