<script>
$("input#manual_untested").click(function (){

  if ($("input#manual_untested").is(":checked"))
{
  $("input#manual_status").attr('disabled', true);
  $("input#manual_blocked").attr('disabled', true);
}
  else
{ 
    $("input#manual_status").attr('disabled', false);
    $("input#manual_blocked").attr('disabled', false);
}
});

  
  
  
  
  
$("input#manual_blocked").click(function (){

  if ($("input#manual_blocked").is(":checked"))
{
  $("div#results").hide("fast");
  $("input#manual_status").attr('disabled', true);
  $("input#manual_untested").attr('disabled', true);
}
  else
{ 
    $("div#results").show("fast");
    $("input#manual_status").attr('disabled', false);
    $("input#manual_untested").attr('disabled', false);
}
});

$(document).ready(function() {
    if ($("input#manual_blocked").is(":checked"))
