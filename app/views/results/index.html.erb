<div align="right"><%= link_to 'Metrics', failures_path %> | <%= link_to 'Logout', logout_path %></div>
  <h1>Watircuke Results</h1>
  
  <div id="results">
    
    <p align="center"><%= will_paginate @results %></p>
    <br/><br/>
<table>
  <tr>
    <th></th>
    <th>When?</th>
    <th>File</th>
    <th>Comment</th>
  </tr>
<% @results.each do |result| %>
  <tr class="<%= cycle("even", "odd") -%>">
    <td><%= link_to 'Edit', edit_result_path(result) %>
    <td><%=h result.created_at.strftime("%A " + "at %I:%M%p") %> **** </td>
    <td><i><%=h truncate(result.title, :length => 100) %></i></td>
    <td><i><%=h (result.comment) %></i></td>
  </tr>
<% end %>
</table>
<br/><br/>
<p align="center"><%= will_paginate @results %></p>

</div>